<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>
    <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
    <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:orcl2</property>
    <property name="hibernate.connection.username">lastorres</property>
    <property name="hibernate.connection.password">lastorres</property>
    <mapping resource="residencia/modelo/pojos/TipoMovimiento.hbm.xml"/>
    <mapping resource="residencia/modelo/pojos/Habitacion.hbm.xml"/>
    <mapping resource="residencia/modelo/pojos/Ocupacion.hbm.xml"/>
    <mapping resource="residencia/modelo/pojos/Institucion.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
